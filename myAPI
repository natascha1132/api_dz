import requests

def get_flight_info(origin, destination, date):
    url = f"https://api.travelpayouts.com/v2/prices/latest?origin={origin}&destination={destination}&depart_date={date}&token=YOUR_API_TOKEN"
    response = requests.get(url)

    if response.status_code == 200:
        flight_data = response.json()
        return flight_data
    else:
        return None

origin = input("Введите код аэропорта отправления: ")
destination = input("Введите код аэропорта назначения: ")
date = input("Введите дату вылета (гггг-мм-дд): ")

flight_info = get_flight_info(origin, destination, date)

if flight_info:
    print("Информация о доступных авиабилетах:")
    for ticket in flight_info["data"]:
        print("Цена:", ticket["price"])
        print("Авиакомпания:", ticket["airline")
        print("Даты вылета и прилета:", ticket["depart_date"], "-", ticket["return_date"])
        print("-----------------------------------------------------")
else:
    print("Информация о доступных авиабилетах не найдена.")

